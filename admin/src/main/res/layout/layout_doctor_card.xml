<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:clipToPadding="false"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false"
    android:background="?selectableItemBackground">

    <RelativeLayout
        android:id="@+id/idRlDoctor"
        android:layout_width="match_parent"
        android:padding="12dp"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/idIgProfile"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_photo" />

        <TextView
            android:id="@+id/idTvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="18dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/idIgProfile"
            android:text="@string/name"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/idTvId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idIgProfile"
            android:layout_marginTop="12dp"
            android:text="@string/name"
            android:textSize="18dp"
            android:textColor="@color/black"

            />

        <TextView
            android:id="@+id/idTvClinic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idTvId"
            android:layout_marginTop="12dp"
            android:text="@string/name"
            android:textColor="@color/black"

            android:textSize="18dp" />

        <TextView
            android:id="@+id/idTvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:layout_below="@+id/idTvClinic"
            android:layout_marginTop="12dp"
            android:textColor="@color/black"

            android:textSize="18dp"            />

        <TextView
            android:id="@+id/idTvMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idTvEmail"
            android:layout_marginTop="12dp"
            android:text="@string/name"
            android:textColor="@color/black"
            android:textSize="18dp" />




    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>