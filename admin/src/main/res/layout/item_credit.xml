<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="com.minal.admin.data.response.ledger.CreditHistoryViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_2sdp"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/background_all_rounded_corners">

        <TextView
            android:id="@+id/order_id"
            style="@style/textview_normal_small"
            android:textSize="@dimen/_12sdp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@{viewmodel.statusTextColor}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="@dimen/_5sdp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@{viewmodel.creditId}"
            tools:text="Order #1234567890"/>

        <TextView
            android:id="@+id/date"
            style="@style/textview_normal_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/order_id"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@{viewmodel.date}"
            tools:text="23 Feb 2021, 08:02 PM"/>

<!--        <TextView-->
<!--            android:id="@+id/status"-->
<!--            style="@style/textview_bold_small"-->
<!--            android:textSize="@dimen/_11sdp"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
<!--            android:layout_margin="@dimen/_5sdp"-->
<!--            android:maxLines="1"-->
<!--            android:ellipsize="end"-->
<!--            android:text="@{viewmodel.status}"-->
<!--            android:textColor="@{viewmodel.statusTextColor}"-->
<!--            tools:text="Order #1234567890"/>-->


        <TextView
            android:id="@+id/title"
            style="@style/textview_normal_medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/date"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="@{viewmodel.title}"
            tools:text="Ananta Upper Meidicne"/>

        <TextView
            android:id="@+id/sub_title"
            style="@style/textview_bold_small"
            android:textSize="@dimen/_9sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="@{viewmodel.subTitle}"
            android:textColor="@color/orange_F8AA37"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:layout_marginStart="@dimen/_5sdp"
            tools:text="10 ml"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>