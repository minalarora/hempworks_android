<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="6dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_orange_corner_radius"
        android:padding="12dp">


    <TextView
        android:id="@+id/idTvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:maxLines="2"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:text="name"/>

    <LinearLayout
        android:id="@+id/idLlVar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idTvName"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_weight="0.3"
            android:textColor="@color/black"
            android:text="Size :"/>
        <TextView
            android:id="@+id/idTvSize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_weight="0.7"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="name"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/idLlQuant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idLlVar"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_weight="0.3"
            android:textColor="@color/black"
            android:text="Quantity :"/>
        <TextView
            android:id="@+id/idTvQunat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_weight="0.7"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="name"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idLlQuant"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_weight="0.3"
            android:textColor="@color/black"
            android:text="Price"/>
        <TextView
            android:id="@+id/idTvPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_weight="0.7"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="name"/>

    </LinearLayout>

    </RelativeLayout>


</RelativeLayout>