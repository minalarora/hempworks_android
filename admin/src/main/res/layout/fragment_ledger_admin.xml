<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_CDCDCD">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:minHeight="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="@android:color/white"
            android:background="@color/yellow"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_back"
                android:elevation="1dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/textview_normal_big"
                android:textColor="@color/white"
                android:text="@string/account_ledger"/>

            <ImageView
                android:id="@+id/filter"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_menu_filter"
                android:elevation="1dp"
                android:visibility="gone"
                android:layout_gravity="end"
                app:tint="@color/white" />

        </androidx.appcompat.widget.Toolbar>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="10dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar">
            <ImageView
                android:id="@+id/date_imageview"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_time"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/border"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/date_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/textview_normal_small"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/date_imageview"
                app:layout_constraintBottom_toTopOf="@id/border"
                android:layout_margin="10dp"
                tools:text="Due date"/>

            <View
                android:id="@+id/border"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.4"
                android:background="@color/grey_AAAAAA"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@id/date_imageview"/>

            <ImageView
                android:id="@+id/price_imageview"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_rupee"
                app:layout_constraintTop_toBottomOf="@id/border"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/price_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/textview_normal_small"
                app:layout_constraintStart_toEndOf="@id/price_imageview"
                app:layout_constraintTop_toBottomOf="@id/border"
                android:layout_margin="10dp"
                tools:text="Used Limit: Rs.12"/>

            <ImageView
                android:id="@+id/pending_price_imageview"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_rupee"
                app:layout_constraintTop_toBottomOf="@id/price_imageview"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/pending_price_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/textview_normal_small"
                app:layout_constraintStart_toEndOf="@id/price_imageview"
                app:layout_constraintTop_toBottomOf="@id/price_title"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="10dp"
                tools:text="Pending Amount: Rs.12"/>



            <TextView
                android:id="@+id/pay_now"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                style="@style/textview_normal_small"
                android:text="@string/pay_now"
                android:visibility="gone"
                android:textColor="@color/white"
                android:background="@drawable/background_orange_corner_radius"
                android:gravity="center"
                android:textAllCaps="true"
                android:letterSpacing="0.09"
                android:padding="8dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/border"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/date_range"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/textview_italic_small"
            android:textSize="12dp"
            app:layout_constraintTop_toBottomOf="@id/top_layout"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="15dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:visibility="gone"
            android:text="viewmodel.dateRangeText"
            tools:text="Showing results for 17 DEC 21 - 30 jan 21"/>

        <ImageView
            android:id="@+id/date_range_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_fill"
            android:layout_margin="5dp"
            app:layout_constraintTop_toTopOf="@id/date_range"
            app:layout_constraintBottom_toBottomOf="@id/date_range"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            app:tint="@color/dark_red" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/date_range"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="5dp"
            android:background="@color/grey_CDCDCD" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

