<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/idBtnAdd"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_fill_orange"
        android:gravity="center"
        android:text="Pick image from gallery"
        android:textColor="@color/white" />

    <LinearLayout
        android:id="@+id/idLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idBtnAdd"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16sp"
            android:text="Image name :"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/idTvIgName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            android:text=""
            android:textColor="@color/black" />

    </LinearLayout>


    <EditText
        android:id="@+id/idEdtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idLl"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_orange_corner_radius"
        android:hint="@string/title"
        android:inputType="text"
        android:padding="12dp"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/idEdtUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idEdtTitle"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_orange_corner_radius"
        android:hint="@string/enter_url"
        android:padding="12dp"
        android:textSize="16dp" />


    <TextView
        android:id="@+id/idBtnBlog"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:background="@drawable/bg_fill_orange"
        android:gravity="center"
        android:text="Create Blog"
        android:textColor="@color/white" />



</RelativeLayout>