<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/idRlOrder"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:background="@drawable/edittext_orange_corner_radius"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/idTvIds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/idTvOId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/idTvIds"
            android:text="@string/name"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/idTvVarId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idTvIds"
            android:layout_marginTop="12dp"
            android:text="@string/name"
            android:textColor="@color/black"
            android:textSize="16sp"

            />

        <TextView
            android:id="@+id/idTvNames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idTvVarId"
            android:layout_marginTop="12dp"
            android:text="@string/name"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/idTvSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idTvNames"
            android:layout_marginTop="12dp"
            android:text="@string/name"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/idTvRs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idTvSize"
            android:layout_marginTop="12dp"
            android:text="Rs."
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/idTvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idTvSize"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/idTvRs"
            android:text="@string/name"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idTvSize"
            android:layout_marginTop="12dp"
            android:text="Qty:"
            android:layout_toLeftOf="@+id/idTvQuantity"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/idTvQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idTvSize"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:text="@string/name"
            android:textColor="@color/black"
            android:textSize="18sp" />




    </RelativeLayout>

</RelativeLayout>