<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:padding="12dp"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/idRlDoctor"
        android:layout_width="match_parent"
        android:padding="12dp"
        android:background="@drawable/edittext_orange_corner_radius"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/idIgProfile"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_photo" />

        <TextView
            android:id="@+id/idTvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/idIgProfile"
            android:text="@string/name"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/idTvClinic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/idIgProfile"
            android:text="@string/name"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/idTvId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idIgProfile"
            android:layout_marginTop="12dp"
            android:text="@string/name"
            android:textColor="@color/black"
            android:textSize="18dp"

            />

        <TextView
            android:id="@+id/idTvCreated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idTvId"
            android:layout_marginTop="12dp"
            android:text="@string/name"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/idTvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idTvCreated"
            android:layout_marginTop="12dp"
            android:text="@string/name"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/idTvMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idTvEmail"
            android:layout_marginTop="12dp"
            android:text="@string/name"
            android:textColor="@color/black"
            android:textSize="18dp" />


    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/idRlOrder"
            android:layout_width="match_parent"
            android:layout_below="@+id/idRlDoctor"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:background="@drawable/edittext_orange_corner_radius"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/idTvIds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/idTvOId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/idTvIds"
                android:text="@string/name"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/idTvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@string/name"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/idTvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idTvIds"
                android:layout_marginTop="12dp"
                android:text="@string/name"
                android:textColor="@color/black"
                android:textSize="14sp"

                />

            <TextView
                android:id="@+id/idTvNames"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idTvTime"
                android:layout_marginTop="12dp"
                android:text="@string/name"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/idTvSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idTvNames"
                android:layout_marginTop="12dp"
                android:text="@string/name"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/idTvRs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idTvSize"
                android:layout_marginTop="12dp"
                android:text="Rs."
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/idTvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idTvSize"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@+id/idTvRs"
                android:text="@string/name"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idTvSize"
                android:layout_marginTop="12dp"
                android:text="Qty:"
                android:layout_toLeftOf="@+id/idTvQuantity"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/idTvQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idTvSize"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="12dp"
                android:text="@string/name"
                android:textColor="@color/black"
                android:textSize="18sp" />




        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/idRlAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idRlOrder"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_orange_corner_radius"
        android:padding="12dp">

        <TextView
            android:id="@+id/idTvAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address"
            android:textSize="18dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/idTvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idTvAdd"
            android:layout_marginTop="12dp"
            android:text="@string/name"
            android:textColor="@color/black"
            android:textSize="18dp" />



    </RelativeLayout>

</RelativeLayout>