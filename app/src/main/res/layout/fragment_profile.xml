<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="com.hemp.works.dashboard.profile.ui.ProfileViewModel" />

        <import type="com.hemp.works.dashboard.UserType"/>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:minHeight="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="@android:color/white"
            android:background="?attr/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_margin="@dimen/_10sdp"
                android:src="@drawable/ic_back"
                android:elevation="1dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/textview_normal_big"
                android:textColor="@color/white"
                android:text="@string/profile"/>

        </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/profile_container"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginTop="@dimen/_16sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:src="@drawable/doctor_placeholder"/>

            <ImageView
                android:id="@+id/add_profile"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/ic_camera"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/name_title"
            style="@style/textview_bold_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/full_name"
            android:textColor="@color/grey_AAAAAA"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_container" />

        <TextView
            android:id="@+id/name_value"
            style="@style/textview_normal_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:letterSpacing="0.05"
            app:layout_constraintTop_toBottomOf="@id/name_title"
            tools:text="Minal Arora"/>

        <TextView
            android:id="@+id/status"
            style="@style/textview_normal_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your_id_verification_is_in_progress"
            android:background="@color/light_red"
            android:padding="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_container" />

        <TextView
            android:id="@+id/clinic_name_title"
            style="@style/textview_bold_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/clinic_name"
            android:textColor="@color/grey_AAAAAA"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@id/name_value" />

        <TextView
            android:id="@+id/clinic_name_value"
            style="@style/textview_normal_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:letterSpacing="0.05"
            app:layout_constraintTop_toBottomOf="@id/clinic_name_title"
            tools:text="Minal Arora Clinic"/>

        <TextView
            android:id="@+id/email_title"
            style="@style/textview_bold_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:textColor="@color/grey_AAAAAA"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clinic_name_value" />

        <TextView
            android:id="@+id/email_value"
            style="@style/textview_normal_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:letterSpacing="0.05"
            app:layout_constraintTop_toBottomOf="@id/email_title"
            tools:text="minaalarora567@gmail.com"/>

        <TextView
            android:id="@+id/email_edit"
            style="@style/textview_italic_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_3sdp"
            android:text="@string/edit"
            android:drawablePadding="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clinic_name_value"
            app:drawableStartCompat="@drawable/ic_edit" />

        <TextView
            android:id="@+id/mobile_title"
            style="@style/textview_bold_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contact_no"
            android:textColor="@color/grey_AAAAAA"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@id/email_value" />

        <TextView
            android:id="@+id/mobile_value"
            style="@style/textview_normal_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:letterSpacing="0.05"
            app:layout_constraintTop_toBottomOf="@id/mobile_title"
            tools:text="8871748278"/>

        <TextView
            android:id="@+id/mobile_edit"
            style="@style/textview_italic_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_3sdp"
            android:text="@string/edit"
            android:drawablePadding="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/email_value"
            app:drawableStartCompat="@drawable/ic_edit" />

        <TextView
            android:id="@+id/wallet_title"
            style="@style/textview_bold_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/due_amount"
            android:textColor="@color/grey_AAAAAA"
            android:layout_marginTop="@dimen/_20sdp"
            android:drawablePadding="@dimen/_5sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mobile_value"
            app:drawableEndCompat="@drawable/ic_info" />

        <TextView
            android:id="@+id/wallet_value"
            style="@style/textview_normal_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:letterSpacing="0.05"
            app:layout_constraintTop_toBottomOf="@id/wallet_title"
            tools:text="Rs: 0/-"/>

        <TextView
            android:id="@+id/wallet_remaining"
            style="@style/textview_normal_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pay_remaining_amount"
            android:background="@color/light_red"
            android:padding="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mobile_value" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

        <include
            layout="@layout/progress_bar_white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:isVisible="@{viewmodel.loading}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
