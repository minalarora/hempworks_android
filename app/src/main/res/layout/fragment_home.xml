<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="com.hemp.works.dashboard.home.ui.HomeViewModel" />

        <variable
            name="usertype"
            type="com.hemp.works.dashboard.UserType" />

        <variable
            name="user"
            type="com.hemp.works.login.data.model.Doctor" />

        <import type="com.hemp.works.dashboard.UserType"/>
    </data>

        <androidx.drawerlayout.widget.DrawerLayout
            android:id="@+id/drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:minHeight="?attr/actionBarSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:setToolbarMenu="@{usertype}"
                    app:titleTextColor="@android:color/white"
                    android:background="?attr/colorPrimary"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                </androidx.appcompat.widget.Toolbar>

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/toolbar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/grey_CDCDCD">

                    <TextView
                        android:id="@+id/search"
                        android:layout_width="0dp"
                        style="@style/textview_normal_medium"
                        android:text="@string/search_products"
                        android:layout_height="wrap_content"
                        android:textColor="@color/green_title"
                        android:drawablePadding="@dimen/_5sdp"
                        android:padding="@dimen/_10sdp"
                        android:gravity="center_vertical"
                        android:background="@drawable/edittext_black_corner_radius"
                        android:layout_margin="@dimen/_10sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:drawableStartCompat="@drawable/ic_menu_search"
                        app:drawableTint="@color/green_title" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/banner_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/search"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginVertical="@dimen/_10sdp"
                        app:hideIfFalse="@{viewmodel.bannerVisibility}"
                        tools:listitem="@layout/item_banner_image"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/dosage_calculator"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="wrap_content"
                        android:foreground="@drawable/edittext_orange_corner_radius"
                        app:cardCornerRadius="@dimen/_8sdp"
                        android:layout_margin="@dimen/_10sdp"
                        app:hideIfFalse="@{usertype == UserType.APPROVED}"
                        app:layout_constraintTop_toBottomOf="@id/banner_recyclerview"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/upload_prescription">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="@dimen/_5sdp">

                         <ImageView
                             android:layout_width="@dimen/_50sdp"
                             android:layout_height="@dimen/_50sdp"
                             android:src="@drawable/ic_menu_calculator"
                             app:tint="@color/orange_F8AA37" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/textview_normal_small"
                            android:textColor="@color/green_title"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_gravity="center_vertical"
                            android:text="@string/dosage_calculator"
                            android:gravity="start"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/upload_prescription"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="wrap_content"
                        android:foreground="@drawable/edittext_orange_corner_radius"
                        app:cardCornerRadius="@dimen/_8sdp"
                        android:layout_margin="@dimen/_10sdp"
                        app:hideIfFalse="@{usertype == UserType.APPROVED}"
                        app:layout_constraintStart_toEndOf="@id/dosage_calculator"
                        app:layout_constraintTop_toBottomOf="@id/banner_recyclerview"
                        app:layout_constraintEnd_toEndOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="@dimen/_5sdp">

                            <ImageView
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_50sdp"
                                android:src="@drawable/ic_menu_prescription_upload"
                                app:tint="@color/orange_F8AA37" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/textview_normal_small"
                                android:textColor="@color/green_title"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_gravity="center_vertical"
                                android:text="@string/upload_prescription"
                                android:gravity="start"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/offer_banner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardBackgroundColor="@color/white"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="false"
                        app:hideIfFalse="@{usertype == UserType.APPROVED}"
                        app:layout_constraintTop_toBottomOf="@id/dosage_calculator"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp">

                        <ImageView
                            android:id="@+id/image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/offer_banner"
                            tools:src="@drawable/offer_banner" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/category_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/textview_normal_medium"
                        android:textColor="@color/green_title"
                        android:text="@string/categories"
                        android:singleLine="true"
                        app:layout_constraintTop_toBottomOf="@id/offer_banner"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        app:hideIfFalse="@{viewmodel.categoryVisibility}"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/category_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/category_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/_5sdp"
                        app:hideIfFalse="@{viewmodel.categoryVisibility}"
                        tools:listitem="@layout/item_category"/>

                    <TextView
                        android:id="@+id/trending_product_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/textview_normal_medium"
                        android:textColor="@color/green_title"
                        android:text="@string/trending_products"
                        android:singleLine="true"
                        app:layout_constraintTop_toBottomOf="@id/category_recyclerview"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        app:hideIfFalse="@{viewmodel.bestSellerProductVisibility}"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/trending_product_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:spanCount="2"
                        app:layout_constraintTop_toBottomOf="@id/trending_product_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        app:hideIfFalse="@{viewmodel.bestSellerProductVisibility}"
                        tools:listitem="@layout/item_product"/>

                    <TextView
                        android:id="@+id/instagram_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/textview_normal_medium"
                        android:textColor="@color/green_title"
                        android:text="@string/instagram_feed"
                        android:singleLine="true"
                        app:layout_constraintTop_toBottomOf="@id/trending_product_recyclerview"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        app:hideIfFalse="@{viewmodel.instagramVisibility}"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/instagram_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/instagram_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        app:hideIfFalse="@{viewmodel.instagramVisibility}"
                        tools:listitem="@layout/item_instagram"/>
                    <TextView
                        android:id="@+id/all_product_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/textview_normal_medium"
                        android:textColor="@color/green_title"
                        android:text="@string/all_products"
                        android:singleLine="true"
                        app:layout_constraintTop_toBottomOf="@id/instagram_recyclerview"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        app:hideIfFalse="@{viewmodel.allProductVisibility}"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/all_product_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:spanCount="2"
                        app:layout_constraintTop_toBottomOf="@id/all_product_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        app:hideIfFalse="@{viewmodel.allProductVisibility}"
                        tools:listitem="@layout/item_product"/>


                    <TextView
                        android:id="@+id/blog_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/textview_normal_medium"
                        android:textColor="@color/green_title"
                        android:text="@string/blogs"
                        android:singleLine="true"
                        app:layout_constraintTop_toBottomOf="@id/all_product_recyclerview"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        app:hideIfFalse="@{viewmodel.blogVisibility}"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/blog_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/blog_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        app:hideIfFalse="@{viewmodel.blogVisibility}"
                        tools:listitem="@layout/item_blog"/>

                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_75sdp"
                        android:src="@drawable/logo"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        app:layout_constraintTop_toBottomOf="@id/blog_recyclerview"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/footer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/textview_normal_small"
                        android:textColor="@color/green_title"
                        android:text="@string/www_hempworks_in_info_hempworks_in"
                        android:singleLine="true"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@id/logo"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_margin="@dimen/_10sdp" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.core.widget.NestedScrollView>

                <include
                    layout="@layout/progress_bar_white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:isVisible="@{viewmodel.loading}"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.navigation.NavigationView
                android:id="@+id/navigation_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:clipToPadding="false"
                app:itemTextColor="@color/orange_F8AA37"
                app:itemIconTint="@color/orange_F8AA37"
                app:headerLayout="@layout/nav_header_main"
                app:setMenu="@{usertype}"
                app:setHeader="@{user}"
                />

        </androidx.drawerlayout.widget.DrawerLayout>

</layout>