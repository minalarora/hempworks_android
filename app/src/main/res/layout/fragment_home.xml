<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="com.hemp.works.dashboard.home.ui.HomeViewModel" />

        <variable
            name="usertype"
            type="com.hemp.works.dashboard.UserType" />

        <variable
            name="user"
            type="com.hemp.works.login.data.model.Doctor" />

        <import type="com.hemp.works.dashboard.UserType"/>
    </data>

        <androidx.drawerlayout.widget.DrawerLayout
            android:id="@+id/drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:minHeight="?attr/actionBarSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:menu="@menu/toolbar_user_menu"
                    app:titleTextColor="@android:color/white"
                    android:background="?attr/colorPrimary"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                </androidx.appcompat.widget.Toolbar>

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/toolbar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/grey_CDCDCD">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/banner_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginVertical="@dimen/_10sdp"
                        app:hideIfFalse="@{viewmodel.bannerVisibility}"
                        tools:listitem="@layout/item_banner_image"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/dosage_calculator"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_120sdp"
                        android:foreground="@drawable/edittext_orange_corner_radius"
                        app:cardCornerRadius="@dimen/_8sdp"
                        android:layout_margin="@dimen/_10sdp"
                        app:hideIfFalse="@{usertype == UserType.APPROVED}"
                        app:layout_constraintTop_toBottomOf="@id/banner_recyclerview"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/upload_prescription">

                         <ImageView
                             android:layout_width="match_parent"
                             android:layout_height="@dimen/_80sdp"
                             android:src="@drawable/ic_menu_calculator"
                             app:tint="@color/orange_F8AA37" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/textview_normal_medium"
                            android:padding="@dimen/_10sdp"
                            android:textColor="@color/orange_F8AA37"
                            android:text="@string/dosage_calculator"
                            android:layout_gravity="bottom"
                            android:gravity="center"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/upload_prescription"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_120sdp"
                        android:foreground="@drawable/edittext_orange_corner_radius"
                        app:cardCornerRadius="@dimen/_8sdp"
                        android:layout_margin="@dimen/_10sdp"
                        app:hideIfFalse="@{usertype == UserType.APPROVED}"
                        app:layout_constraintStart_toEndOf="@id/dosage_calculator"
                        app:layout_constraintTop_toBottomOf="@id/banner_recyclerview"
                        app:layout_constraintEnd_toEndOf="parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_70sdp"
                            android:layout_marginVertical="@dimen/_5sdp"
                            android:src="@drawable/ic_menu_prescription_upload"
                            app:tint="@color/orange_F8AA37" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/textview_normal_medium"
                            android:padding="@dimen/_10sdp"
                            android:textColor="@color/orange_F8AA37"
                            android:text="@string/upload_prescription"
                            android:layout_gravity="bottom"
                            android:gravity="center"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/category_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/textview_normal_medium"
                        android:textColor="@color/orange_F8AA37"
                        android:text="@string/categories"
                        android:singleLine="true"
                        app:layout_constraintTop_toBottomOf="@id/dosage_calculator"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        app:hideIfFalse="@{viewmodel.categoryVisibility}"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/category_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/category_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/_5sdp"
                        app:hideIfFalse="@{viewmodel.categoryVisibility}"
                        tools:listitem="@layout/item_category"/>

                    <TextView
                        android:id="@+id/trending_product_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/textview_normal_medium"
                        android:textColor="@color/orange_F8AA37"
                        android:text="@string/trending_products"
                        android:singleLine="true"
                        app:layout_constraintTop_toBottomOf="@id/category_recyclerview"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        app:hideIfFalse="@{viewmodel.bestSellerProductVisibility}"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/trending_product_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:spanCount="2"
                        app:layout_constraintTop_toBottomOf="@id/trending_product_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        app:hideIfFalse="@{viewmodel.bestSellerProductVisibility}"
                        tools:listitem="@layout/item_product"/>

                    <TextView
                        android:id="@+id/all_product_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/textview_normal_medium"
                        android:textColor="@color/orange_F8AA37"
                        android:text="@string/all_products"
                        android:singleLine="true"
                        app:layout_constraintTop_toBottomOf="@id/trending_product_recyclerview"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        app:hideIfFalse="@{viewmodel.allProductVisibility}"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/all_product_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:spanCount="2"
                        app:layout_constraintTop_toBottomOf="@id/all_product_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        app:hideIfFalse="@{viewmodel.allProductVisibility}"
                        tools:listitem="@layout/item_product"/>




                </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.core.widget.NestedScrollView>

                <include
                    layout="@layout/progress_bar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:isVisible="@{viewmodel.loading}"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.navigation.NavigationView
                android:id="@+id/navigation_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:clipToPadding="false"
                app:itemTextColor="@color/orange_F8AA37"
                app:itemIconTint="@color/orange_F8AA37"
                app:headerLayout="@layout/nav_header_main"
                app:setMenu="@{usertype}"
                app:setHeader="@{user}"
                />

        </androidx.drawerlayout.widget.DrawerLayout>

</layout>