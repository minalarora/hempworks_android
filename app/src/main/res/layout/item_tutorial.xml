<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="com.hemp.works.dashboard.tnl.ui.adapters.TutorialViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2sdp"
        android:background="@color/white"
        android:paddingVertical="@dimen/_5sdp">

        <TextView
            android:id="@+id/description"
            style="@style/textview_normal_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{viewmodel.description}"
            android:gravity="start"
            android:maxLines="3"
            android:ellipsize="end"
            android:paddingHorizontal="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_5sdp"
            app:hideIfFalse="@{viewmodel.descriptionVisibility}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Minal Arora"/>
        <RelativeLayout
            android:id="@+id/cover_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            app:hideIfFalse="@{viewmodel.coverVisibility}"
            app:layout_constraintTop_toBottomOf="@id/description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageView
                android:id="@+id/play_overlay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                app:glideImage="@{viewmodel.coverImageUrl}"
                tools:src="@drawable/newsletter"/>
            <ImageView
                android:id="@+id/cover"
                android:layout_width="match_parent"
                android:src="@drawable/ic_play_big"
                android:background="@color/grey_transparent"
                android:layout_centerInParent="true"
                android:scaleType="centerInside"
                android:layout_height="@dimen/_150sdp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/title"
            style="@style/textview_normal_medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:maxLines="3"
            android:ellipsize="end"
            android:paddingHorizontal="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="@{viewmodel.title}"
            app:layout_constraintTop_toBottomOf="@id/cover_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/pdf_download"
            tools:text="Minal Arora"/>

        <ImageView
            android:id="@+id/pdf_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_pdf"
            android:paddingHorizontal="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_5sdp"
            app:hideIfFalse="@{viewmodel.pdfVisibility}"
            app:layout_constraintTop_toBottomOf="@id/cover_container"
            app:layout_constraintEnd_toEndOf="parent"/>


        <TextView
            android:id="@+id/time"
            style="@style/textview_italic_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="@color/orange_F8AA37"
            android:drawablePadding="@dimen/_4sdp"
            android:paddingHorizontal="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="@{viewmodel.date}"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="in Personal Care"
            app:drawableStartCompat="@drawable/ic_time" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>