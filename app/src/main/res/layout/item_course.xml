<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="com.hemp.works.dashboard.course.ui.adapter.CourseViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:background="@drawable/background_all_rounded_corners">

        <RelativeLayout
            android:id="@+id/cover_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            hideIfFalse="@{viewmodel.imageVisibility}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageView
                android:id="@+id/cover"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:scaleType="centerCrop"
                glideImage="@{viewmodel.image}"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/title"
            style="@style/textview_normal_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="@{viewmodel.title}"
            android:paddingHorizontal="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@id/cover_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/pdf_download"
            tools:text="123456789012345678901234567890123456789012345678901234567890"/>

        <ImageView
            android:id="@+id/pdf_download"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:src="@drawable/ic_pdf"
            android:paddingHorizontal="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@id/cover_container"
            app:layout_constraintEnd_toEndOf="parent"/>


        <TextView
            android:id="@+id/time"
            style="@style/textview_italic_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="@color/orange_F8AA37"
            android:drawablePadding="@dimen/_4sdp"
            android:paddingHorizontal="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="@{viewmodel.date}"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="in Personal Care"
            app:drawableStartCompat="@drawable/ic_time" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>