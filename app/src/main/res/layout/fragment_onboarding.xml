<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="fragment"
            type="com.hemp.works.login.ui.OnboardingFragment" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/textview_normal_medium"
            android:text="@string/skip"
            android:layout_margin="@dimen/_18sdp"
            invisibleIfTrue="@{fragment.isLast}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/skip"
            app:layout_constraintBottom_toTopOf="@id/tablayout"/>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tablayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabBackground="@drawable/viewpager_tablayout_selector"
            app:tabGravity="center"
            app:tabIndicatorColor="@color/orange_F8AA37"
            app:tabIndicatorHeight="0dp"
            app:layout_constraintBottom_toTopOf="@id/next"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/textview_normal_medium"
            android:textColor="@color/white"
            android:text="@{fragment.isLast ? @string/get_started : @string/next}"
            android:background="@drawable/background_orange_corner_radius"
            android:gravity="center"
            android:layout_margin="@dimen/_24sdp"
            android:padding="@dimen/_6sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>