<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="com.hemp.works.dashboard.product.ui.ProductViewModel" />

            <import type="com.hemp.works.dashboard.UserType"/>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:minHeight="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/toolbar_product_menu"
            app:titleTextColor="@android:color/white"
            android:background="?attr/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        </androidx.appcompat.widget.Toolbar>

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/ic_back"
            android:elevation="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="@color/white" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/grey_CDCDCD"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/image_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:hideIfFalse="@{viewmodel.productImagesVisibility}"
                    tools:listitem="@layout/item_product_image"/>

                <TextView
                    android:id="@+id/title"
                    style="@style/textview_bold_big"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:gravity="left"
                    android:textAllCaps="true"
                    android:text="@{viewmodel.productTitle}"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/image_recyclerview"
                    tools:text="HEMPWORS GLOBAL COMBO MEDICINE" />

                <TextView
                    android:id="@+id/price"
                    style="@style/textview_bold_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:gravity="left"
                    android:lineHeight="@dimen/_17sdp"
                    android:text="@{viewmodel.price}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title" />

<!--                String text = "<strike><font color=\'#757575\'>Some text</font></strike>";-->
<!--                textview.setText(Html.fromHtml(text));-->

                <TextView
                    android:id="@+id/price_sub"
                    style="@style/textview_italic_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:gravity="left"
                    android:text="@string/tax_included"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/price" />

                <TextView
                    android:id="@+id/size"
                    style="@style/textview_normal_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:gravity="left"
                    android:text="@string/size"
                    android:textColor="@color/orange_F8AA37"
                    android:textAllCaps="true"
                    android:letterSpacing="0.09"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/price_sub"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/size_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/size"
                    tools:listitem="@layout/item_size"/>

                <TextView
                    android:id="@+id/quantity"
                    style="@style/textview_normal_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:gravity="left"
                    android:textAllCaps="true"
                    android:letterSpacing="0.09"
                    android:textColor="@color/orange_F8AA37"
                    android:text="@string/quantity"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/size_recyclerview"
                    />

                <ImageView
                    android:id="@+id/minus"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:src="@drawable/ic_minus"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/quantity"
                    android:elevation="1dp"
                    android:onClick="@{() -> viewmodel.decreaseQuantity()}"
                    app:tint="@color/orange_F8AA37" />
                <TextView
                    android:id="@+id/quantity_number"
                    style="@style/textview_normal_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="@{viewmodel.quantity}"
                    android:layout_marginVertical="@dimen/_4sdp"
                    app:layout_constraintStart_toEndOf="@id/minus"
                    app:layout_constraintTop_toTopOf="@id/minus"
                    app:layout_constraintBottom_toBottomOf="@id/minus"
                    android:paddingHorizontal="@dimen/_25sdp"
                    android:elevation="1dp"
                    tools:text="1"
                    />
                <ImageView
                    android:id="@+id/plus"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:src="@drawable/ic_add"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:layout_constraintStart_toEndOf="@id/quantity_number"
                    app:layout_constraintTop_toBottomOf="@id/quantity"
                    android:elevation="1dp"
                    android:onClick="@{ () -> viewmodel.increaseQuantity()}"
                    app:tint="@color/orange_F8AA37" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="@id/minus"
                    app:layout_constraintEnd_toEndOf="@id/plus"
                    app:layout_constraintTop_toTopOf="@id/minus"
                    app:layout_constraintBottom_toBottomOf="@id/minus"
                    android:background="@color/white"/>

                <TextView
                    android:id="@+id/add_cart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/textview_normal_medium"
                    android:text="@string/add_to_cart"
                    android:background="@drawable/textview_orange_corner_radius"
                    android:gravity="center"
                    android:letterSpacing="0.09"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginHorizontal="@dimen/_24sdp"
                    android:padding="@dimen/_10sdp"
                    app:hideIfFalse="@{viewmodel.buttonVisibility}"
                    app:layout_constraintTop_toBottomOf="@id/minus"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/buy_now"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/textview_normal_medium"
                    android:text="@string/buy_now"
                    android:textColor="@color/white"
                    android:background="@drawable/background_orange_corner_radius"
                    android:gravity="center"
                    android:letterSpacing="0.09"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_24sdp"
                    android:padding="@dimen/_10sdp"
                    app:hideIfFalse="@{viewmodel.buttonVisibility}"
                    app:layout_constraintTop_toBottomOf="@id/add_cart"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/out_of_stock_textview"
                    style="@style/textview_normal_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:gravity="center_vertical"
                    android:background="@color/light_red"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_15sdp"
                    android:drawablePadding="@dimen/_5sdp"
                    android:text="Sorry, this item is currently out of stock"
                    android:drawableStart="@drawable/ic_error"
                    android:textColor="@color/dark_red"
                    app:hideIfTrue="@{viewmodel.buttonVisibility}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/buy_now"
                    />
                <TextView
                    android:id="@+id/description_title"
                    style="@style/textview_normal_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:gravity="left"
                    android:textAllCaps="true"
                    android:letterSpacing="0.09"
                    android:text="@string/description"
                    android:textColor="@color/orange_F8AA37"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/out_of_stock_textview"
                    />

                <TextView
                    android:id="@+id/description_text"
                    style="@style/textview_normal_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:gravity="left"
                    android:letterSpacing="0.09"
                    android:text="@{viewmodel.description}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/description_title"
                    />



                <TextView
                    android:id="@+id/pdf_download"
                    style="@style/textview_normal_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:gravity="center_vertical"
                    android:textAllCaps="true"
                    android:background="@color/grey_CDCDCD"
                    android:padding="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_10sdp"
                    android:text="@string/download_test_reports"
                    android:drawableStart="@drawable/ic_pdf"
                    android:textColor="@color/blue"
                    app:hideIfFalse="@{viewmodel.pdfVisibility}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/description_text"
                    />

                <TextView
                    android:id="@+id/extra_products"
                    style="@style/textview_normal_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:gravity="left"
                    android:textAllCaps="true"
                    android:letterSpacing="0.09"
                    android:text="@string/you_may_also_like"
                    app:hideIfFalse="@{viewmodel.productsListVisibility}"
                    android:textColor="@color/orange_F8AA37"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/pdf_download"
                    />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/extra_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="2"
                    app:layout_constraintTop_toBottomOf="@id/extra_products"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:hideIfFalse="@{viewmodel.productsListVisibility}"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    tools:listitem="@layout/item_product"/>



            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.core.widget.NestedScrollView>

        <include
            layout="@layout/progress_bar_white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:isVisible="@{viewmodel.loading}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>