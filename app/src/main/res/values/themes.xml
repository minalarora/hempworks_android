<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hempworksandroid" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_F8AA37</item>
        <item name="colorPrimaryVariant">@color/orange_F8AA37</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_F8AA37</item>
        <item name="colorSecondaryVariant">@color/orange_F8AA37</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>

        <item name="snackbarStyle">@style/MySnackBarStyle</item>

    </style>

    <style name="MySnackBarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:backgroundTint">@color/dark_red</item>
    </style>

    <style name="BottomSheetTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_bottomsheet_top_rounded_corners</item>
    </style>

    <style name="textview_normal_big" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/lato</item>
    </style>

    <style name="textview_normal_medium" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/lato</item>
    </style>

    <style name="textview_normal_small" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/lato</item>
    </style>

    <style name="textview_bold_big" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/lato_bold</item>
    </style>

    <style name="textview_bold_medium" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/lato_bold</item>
    </style>

    <style name="textview_bold_small" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/lato_bold</item>
    </style>

    <style name="textview_italic_big" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/lato_italic</item>
    </style>

    <style name="textview_italic_medium" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/lato_italic</item>
    </style>

    <style name="textview_italic_small" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/lato_italic</item>
    </style>

    <style name="TransparentView">
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="MaterialCalendarTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimary">@color/orange_F8AA37</item>
        <item name="materialCalendarHeaderTitle">@style/MaterialCalendarThemeTitle</item>
        <item name="materialCalendarHeaderSelection">@style/MaterialCalendarThemeSubTitle</item>
        <item name="materialCalendarHeaderToggleButton">@style/MaterialCalendarThemeSubTitleIcon</item>
        <item name="daySelectedStyle">@style/MaterialCalendarThemeSelectedDateColor</item>
        <item name="dayTodayStyle">@style/MaterialCalendarThemeCurrentDateColor</item>
    </style>

    <style name="MaterialCalendarThemeTitle" parent="Widget.MaterialComponents.MaterialCalendar.HeaderTitle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MaterialCalendarThemeSubTitle" parent="Widget.MaterialComponents.MaterialCalendar.HeaderSelection">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MaterialCalendarThemeSubTitleIcon" parent="Widget.MaterialComponents.MaterialCalendar.HeaderToggleButton">
        <item name="tint">@color/white</item>
    </style>

    <style name="MaterialCalendarThemeSelectedDateColor" parent="Widget.MaterialComponents.MaterialCalendar.Day.Selected">
        <item name="itemTextColor">@color/white</item>
    </style>

    <style name="MaterialCalendarThemeCurrentDateColor" parent="Widget.MaterialComponents.MaterialCalendar.Day.Today">
        <item name="itemStrokeWidth">0dp</item>
    </style>

    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:gravity">center</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>